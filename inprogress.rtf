#-----------------------------------
#SASS

.about-section
	overflow-x: hidden
	margin-left: 25%
	p
		line-height: 2
	.about-button
		margin-left: $spacing-unit
		+media-query($on-palm)
			margin-left: $spacing-unit/4
		cursor: pointer
	.section-heading
		text-align: left
		padding-left: $spacing-unit

.about-belt
	width: 200%
	position: relative
	left: 0%
	+transition(all, 800ms)

	&.slided
		+transform(translate3d(-50%, 0, 0))

.about-wrap, main-about-wrap
	width: 50%
	float: left
	
.main-about-container
	display: block
	max-width: 960px
	margin: 0px auto
	+clearfix
	
	label
		position: relative
		display: block
		float: left
		width: 25%
		cursor: pointer


.about-container
	max-width: 600px
	margin: 0px auto
	padding: 0 15px
	box-sizing: border-box
	position: relative
	display: none

	h4, noscript h4
		color: $accent-color
		font-weight: 300
		text-transform: uppercase
		font-size: 28px
		line-height: 1.2
		margin: 0 0 20px
	
	img
		max-width: 100%
		margin-bottom: 20px
	
	.about-return
		+size(40px)
		cursor: pointer
		opacity: 0.5
		+position(absolute, -4px null null -60px)
		
		path
			fill: rgba(0,0,0,0.4)
	
		&:hover
			opacity: 1
 
 
 
@media (max-width: 740px)
	.about-container
	.about-return
		left: 0px
	
		h4
			margin-left: 60px

